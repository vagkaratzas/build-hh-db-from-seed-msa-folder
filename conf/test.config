/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Nextflow config file for running local tests
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Defines input files and everything required to run a local pipeline test.

    Use as follows:
        nextflow run vagkaratzas/build-hh-db-from-seed-msa-folder -profile test

----------------------------------------------------------------------------------------
*/

process {
    resourceLimits = [
        cpus: 4,
        memory: '30.GB',
        time: '2.h'
    ]
}

params {

    // Input options
    input   = "${projectDir}/assets/fixtures/*"
    db_name = "pfam"
    // Boilerplate options
    outdir  = "${launchDir}/output"

}