/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Nextflow config file for running local tests
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Defines input files and everything required to run a local pipeline test.

    Use as follows:
        nextflow run vagkaratzas/build-hh-db-from-seed-msa-folder -profile test_pfam_mini

----------------------------------------------------------------------------------------
*/

process {
    resourceLimits = [
        cpus: 4,
        memory: '30.GB',
        time: '2.h'
    ]
}

params {

    // Input options
    db_name = "pfam"
    existing_pfam_path = "${projectDir}/assets/Pfam-A_mini.seed.gz"

    // Boilerplate options
    outdir  = "${launchDir}/output"

}